<p id="notice"><%= notice %></p>

<h1>Search Order Status</h1>

<%= form_with(url: search_path, method: 'get', local: true) do %>
  <%= text_field_tag(:search, nil, placeholder: 'Enter order ID', id: 'search') %>
  <%= submit_tag("Search") %>
<% end %>

<br /><br />

<table class="record_table">
  <thead>
    <tr>
      <th>S. No</th>
      <th>Unique No</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @parcels.each_with_index do |parcel,index| %>
      <tr>
        <td><%= index+1 %></td>
        <td><%= parcel.unique_no %></td>
        <td><%= parcel.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% unless user_signed_in? %>
  <%= link_to 'Back', users_path %>
<% end %>  
