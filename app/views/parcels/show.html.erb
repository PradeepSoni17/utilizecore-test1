<p id="notice"><%= notice %></p>

<p>
  <strong>Unique No:</strong>
  <%= @parcel.unique_no %>
</p>

<p>
  <strong>Weight:</strong>
  <%= @parcel.weight %>
</p>

<p>
  <strong>Status:</strong>
  <%= @parcel.status %>
</p>

<p>
  <strong>Service Type:</strong>
  <%= @parcel.service_type.present? ? @parcel.service_type.name : ""%>
</p>

<p>
  <strong>Payment Mode:</strong>
  <%= @parcel.payment_mode %>
</p>

<p>
  <strong>Sender:</strong>
  <%= @parcel.sender.present? ? @parcel.sender.name : "" %>
</p>

<p>
  <strong>Receiver:</strong>
  <%= @parcel.receiver.present? ? @parcel.receiver.name : ""%>
</p>

<p>
  <strong>Cost:</strong>
  <%= @parcel.cost %>
</p>
<% if can? :update, Parcel %>
  <% if @parcel.status == "Delivered"%>
    <%= link_to 'Edit', edit_parcel_path(@parcel),:class=>"disabled-link" %> |
  <% else %> 
    <%= link_to 'Edit', edit_parcel_path(@parcel) %> |
  <%end%>  
<% end %>  
